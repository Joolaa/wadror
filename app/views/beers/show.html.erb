<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery_id %>
</p>

<p>
  <% if @beer.ratings.empty? %>
    This beer has no ratings yet
  <% else %>
      Rated <%= pluralize(@beer.ratings.count, 'time')%>, average rating: <%= @beer.average_rating %>
  <% end %>
</p>

<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>
