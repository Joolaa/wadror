class Beer < ActiveRecord::Base
    belongs_to :brewery
    has_many :ratings, dependent: :destroy

    def average_rating
        self.ratings.map{|rating| rating.score}.inject{|sum, n| sum + n} /
            (self.ratings.count + 0.0)
    end

    def to_s
        "#{self.name}, #{self.brewery.name}"
    end
end
